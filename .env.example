# ============================================================================
# DBR Dashboard V2 - Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!
# ============================================================================

# ----------------------------------------------------------------------------
# Supabase Configuration
# ----------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database direct connection (for migrations/scripts)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# ----------------------------------------------------------------------------
# OpenAI API (for AI Agent & Sophie Intelligence)
# ----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7

# ----------------------------------------------------------------------------
# Twilio (SMS Sending)
# ----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+44123456789

# Twilio Webhook URL (for receiving SMS replies)
# This will be: https://your-domain.com/api/webhooks/twilio
TWILIO_WEBHOOK_URL=

# ----------------------------------------------------------------------------
# n8n Integration
# ----------------------------------------------------------------------------
N8N_API_URL=https://your-instance.app.n8n.cloud
N8N_API_KEY=your-n8n-api-key

# Default workflow IDs (can be overridden per client)
N8N_WORKFLOW_ID_DBR=your-dbr-workflow-id
N8N_WEBHOOK_SECRET=your-webhook-secret

# ----------------------------------------------------------------------------
# Cal.com (Appointment Booking)
# ----------------------------------------------------------------------------
CAL_COM_API_KEY=your-cal-com-api-key
CAL_COM_DEFAULT_LINK=https://cal.com/coldlava/discovery-call

# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
# Environment: development, staging, production
NODE_ENV=development

# Application URL (for webhooks, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ----------------------------------------------------------------------------
# Authentication & Security
# ----------------------------------------------------------------------------
# JWT secret for session tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=60

# ----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# ----------------------------------------------------------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry (Error Tracking)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ----------------------------------------------------------------------------
# Email (Optional - for notifications)
# ----------------------------------------------------------------------------
# Using SendGrid, Resend, or similar
EMAIL_API_KEY=
EMAIL_FROM=noreply@yourdomain.com

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
# Enable/disable features for testing
FEATURE_SOPHIE_ENABLED=true
FEATURE_VOICE_CALLING=false
FEATURE_WHATSAPP=false
FEATURE_EMAIL_CAMPAIGNS=false

# ----------------------------------------------------------------------------
# Development & Debugging
# ----------------------------------------------------------------------------
# Show debug logs
DEBUG=false

# Skip authentication (development only!)
SKIP_AUTH=false

# Mock SMS sending (development only)
MOCK_SMS=true

# ----------------------------------------------------------------------------
# Vercel Deployment (Auto-populated on Vercel)
# ----------------------------------------------------------------------------
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-deployment-url.vercel.app
# VERCEL_GIT_COMMIT_SHA=

# ============================================================================
# End of Environment Variables
# ============================================================================
